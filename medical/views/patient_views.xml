<odoo>

    <record id="view_res_partner_patients_form_inherit" model="ir.ui.view">
        <field name="name">Patients</field>
        <field name="model">res.partner</field>
        <field name="type">form</field>
        <field name="inherit_id" ref="base.view_partner_form"/>
        <field name="arch" type="xml">
            <field name="vat" position="after">
                <field name="is_doctor" string="É médico?"/>
<!--                <field name="is_patient" string="Paciente?"/>-->
<!--                <field name="national_health_card" string="Número do Cartão Nacional de Saúde:"/>-->
            </field>
        </field>
    </record>

    <record id="medical_patient_action" model="ir.actions.act_window">
        <field name="name">Pacientes</field>
        <field name="type">ir.actions.act_window</field>
        <field name="res_model">res.partner</field>
        <field name="view_mode">tree,form</field>
        <field name="domain">[['is_doctor', '=', False]]</field>
        <field name="help" type="html">
            <p class="oe_view_nocontent_create">
                Click to add a new Test
            </p>
        </field>
    </record>
</odoo>
